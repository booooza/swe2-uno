<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: red;" stylesheets="@Styles.css"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.swe2.uno.presentation.gui.controller.WelcomeScreenController">
    <children>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0">
            <children>
                <TextField fx:id="playerName" layoutX="14.0" layoutY="176.0" prefHeight="37.0" prefWidth="241.0"
                           text="Player Name"/>
                <Button fx:id="joinButton" layoutX="14.0" layoutY="244.0" mnemonicParsing="false"
                        onAction="#handleJoinButtonAction" prefHeight="35.0" prefWidth="115.0" text="Join"/>
                <Label layoutX="75.0" layoutY="137.0" text="Enter your name:" textFill="WHITE">
                    <font>
                        <Font name="Helvetica" size="18.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="70.0" fitWidth="97.0" layoutX="14.0" layoutY="14.0">
                    <image>
                        <Image url="@logo.png"/>
                    </image>
                </ImageView>
                <Button layoutX="145.0" layoutY="244.0" mnemonicParsing="false" onAction="#handleStartButtonAction"
                        prefHeight="35.0" prefWidth="115.0" text="Start"/>


                <Label layoutX="396.0" layoutY="137.0" text="Current Players:" textFill="WHITE">
                    <font>
                        <Font name="Helvetica" size="18.0"/>
                    </font>
                </Label>
                <TableView fx:id="playersTable" layoutX="316.0" layoutY="175.0" prefHeight="151.0" prefWidth="156.0"
                           style="-fx-background-color: red;" AnchorPane.bottomAnchor="66.0"
                           AnchorPane.leftAnchor="316.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="175.0">
                    <columns>
                        <TableColumn fx:id="playerIDColumn" prefWidth="147.0" text="Player ID"/>
                        <TableColumn fx:id="playerNameColumn" prefWidth="146.0" text="Player Name"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
