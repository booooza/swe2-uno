<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0"
                    style="-fx-background-color: red;">
            <children>
                <ImageView fitHeight="70.0" fitWidth="97.0" layoutX="14.0" layoutY="14.0">
                    <image>
                        <Image url="@../../images/logo.png"/>
                    </image>
                </ImageView>
                <JFXButton fx:id="serverButton" buttonType="RAISED" layoutX="472.0" layoutY="14.0"
                           mnemonicParsing="false" prefHeight="35.0" prefWidth="115.0" text="Start Server"/>

                <Label layoutX="59.0" layoutY="127.0" text="Enter your name:" textFill="WHITE">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <TextField fx:id="playerName" layoutX="14.0" layoutY="176.0" prefHeight="39.0" prefWidth="270.0"
                           text="Player Name"/>
                <JFXButton fx:id="joinButton" buttonType="RAISED" layoutX="14.0" layoutY="244.0" mnemonicParsing="false"
                           prefHeight="35.0" prefWidth="115.0" text="Join"/>
                <JFXButton fx:id="startButton" buttonType="RAISED" layoutX="169.0" layoutY="244.0"
                           mnemonicParsing="false" prefHeight="35.0" prefWidth="115.0" text="Start"/>

                <Label layoutX="368.0" layoutY="127.0" text="Current Players:" textFill="WHITE">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <TableView fx:id="playersTable" layoutX="316.0" layoutY="175.0" prefHeight="151.0" prefWidth="156.0"
                           style="-fx-background-color: red;" AnchorPane.bottomAnchor="66.0"
                           AnchorPane.leftAnchor="316.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="175.0">
                    <columns>
                        <TableColumn fx:id="playerIDColumn" prefWidth="147.0" text="Player ID"/>
                        <TableColumn fx:id="playerNameColumn" prefWidth="146.0" text="Player Name"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

            </children>
        </AnchorPane>
    </children>
</StackPane>
